<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:text="花港观鱼"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="331dp"
                android:layout_height="214dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/watchfish" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:lineSpacingExtra="7dp"
                android:text="      位于苏堤南端，北倚西山，是西湖风景区内规模最大的一级公园。其来历据志书记载，从前在西山大麦岭后的花家山麓，有一条清澈的小溪流经此处注入西湖，因名“花港”。"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/bus" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="0.00"
                    android:lineSpacingExtra="7dp"
                    android:text="乘K4、308、504、游1、2、3、5路到“苏堤”、“花港”站下或乘西湖游船可到花港。"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/love" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="0.00"
                    android:lineSpacingExtra="7dp"
                    android:text="“花港观鱼”位于南宋时(12－13世纪)官员卢允升的别墅内，因所在位置水域名花港，别墅内凿池养鱼，故名“花港观鱼”。该景观单元现存御碑、御碑亭、鱼池及假山等遗址。"
                    android:textSize="15dp" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar"
                style="RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dip"
                android:layout_weight="0.17"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"
                android:theme="@style/RatingBar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:onClick="fanhui"
                    android:layout_marginLeft="70dp"
                    android:text="返回" />
                <Button
                    android:id="@+id/button5"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:onClick="next"
                    android:text="下一个" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>